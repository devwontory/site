{
  "extends": "@config/typescript/next.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "paths": {
      "#/*": ["./app/*"],
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
